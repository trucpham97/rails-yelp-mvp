<%= render "navbar"%>
<div class="d-flex flex-column align-items-center p-3">
  <h1>New restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.input :category, collection: Restaurant::CATEGORIES, prompt: "PICK A CUISINE" %>
  <%= f.button :submit, "Save new address", class: "btn btn-warning p-3" %>
  <% end %>
</div>
